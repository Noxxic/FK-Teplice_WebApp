@using FKTeplice.ViewComponents


<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">

		<title>FK Teplice</title>

		<meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

		<environment include="Development">
			<link rel="stylesheet" href="~/dist/style.css" />
		</environment>
		<environment exclude="Development">
			<link rel="stylesheet" href="~/dist/style.css" />
		</environment>

		<!--[if lt IE 9]>
		<script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
		<script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
		<![endif]-->

		<!-- Google Font -->
		<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
	</head>

	<body class="fixed hold-transition skin-blue sidebar-mini">
		<div class="wrapper">
			<div class="container-fluid">
			<header class="main-header">

				<a href="/" class="logo">
					<span class="logo-mini"><b>FK</b>T</span>
					<span class="logo-lg"><b>FK </b>Teplice</span>
				</a>

				<nav class="navbar navbar-static-top">
					<a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</a>

					<div class="navbar-header">
						<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
							<i class="fa fa-bars"></i>
						</button>
					</div>

					<div class="collapse navbar-collapse" id="navbar-collapse">
						@await Component.InvokeAsync(nameof(TopMenu))	
						@await Html.PartialAsync("_LoginPartial")
					</div>
				</nav>
			</header>
			</div>
			@await Component.InvokeAsync(nameof(SideMenu))

			<div class="content-wrapper">
				<section class="content">
					@RenderBody()
				</section>
			</div>

			<footer class="main-footer">

			</footer>

		</div>

		<environment include="Development"> 
			<script src="~/dist/main.js" asp-append-version="true"></script>
		</environment>
		<environment exclude="Development">
			<script src="~/dist/main.js" asp-append-version="true"></script>
		</environment>

		@RenderSection("scripts", required: false)

	</body>
</html>
