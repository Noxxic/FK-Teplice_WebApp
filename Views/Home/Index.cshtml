@using FKTeplice.Models.HomeViewModels
@model IndexHomeModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Hráči</h3>
            </div>
            <div class="box-body dl-horizontal">
                <a class="btn btn-primary" asp-controller="Player" asp-action="Create">Přidat hráče</a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Týmy</h3>
            </div>
            <div class="box-body dl-horizontal">
                <a class="btn btn-primary" asp-controller="Team" asp-action="Create">Přidat tým</a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <form enctype="multipart/form-data" asp-controller="Home" asp-action="Physio" method="Post">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Fyziotesty</h3>
                </div>
                <div class="box-body dl-horizontal">
                    <label for="File">Soubor (.xlsx, .xls)</label>
                    <div class="input-group">
                        <span class="input-group-btn">
                            <button type="submit" class="btn btn-primary">Nahrát</button>
                        </span>
                        <input  class="form-control" 
                                name="File"
                                id="File"
                                type="file"
                                accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel"
                        />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>