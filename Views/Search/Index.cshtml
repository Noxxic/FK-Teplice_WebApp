@using FKTeplice.Models.SearchViewModels
@model SearchModel

@{
    ViewData["Title"] = $"Vyhledávání - '{Model.Query}'";
}

<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">@ViewData["Title"]</h3>
            </div>
            <div class="box-body dl-horizontal">
                <p>Hráči:</p>
                <div class="list-group">
                    @if (Model.Players.Count == 0)
                    {
                        <div class="list-group-item">
                            Nenalezeni žádní hráči
                        </div>
                    }
                    @foreach (var player in Model.Players)
                    {
                        <a class="list-group-item" asp-controller="Player" asp-action="Show" asp-route-id="@player.Id">
                            @player.FullName
                        </a>
                    }
                </div>

                <p>Týmy:</p>
                <div class="list-group">
                    @if (Model.Teams.Count == 0)
                    {
                        <div class="list-group-item">
                            Nenalezené žádné týmy
                        </div>
                    }
                    @foreach (var team in Model.Teams)
                    {
                        <a class="list-group-item" asp-controller="Team" asp-action="Show" asp-route-id="@team.Id">
                            @team.Name
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
