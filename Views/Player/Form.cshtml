@using FKTeplice.Models.PlayerViewModels
@model UpdateStorePlayerModel
 
 <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">@ViewData["Title"]</h3>
                </div>
                <div class="box-body dl-horizontal">
                    <div class="form-group">
                        <label for="FirstName">Jméno *</label>
                        <input class="form-control" required asp-for="FirstName" />
                        <span class="text-danger" asp-validation-for="FirstName"></span>
                    </div>  

                    <div class="form-group">
                        <label for="LastName">Příjmení *</label>
                        <input class="form-control" required asp-for="LastName" />
                        <span class="text-danger" asp-validation-for="LastName"></span>
                    </div>

                    <div class="form-group">
                        <label for="Birthday">Datum narození*</label>
                        <input class="form-control" required asp-for="Birthday" />
                        <span class="text-danger" asp-validation-for="Birthday"></span>
                    </div>

                    <div class="form-group">
                        <label for="Photo">Fotografie</label>
                        <input  class="form-control" 
                                name="Photo"
                                id="Photo"
                                type="file"
                                accept="image/*"
                        />
                        <span class="text-danger" asp-validation-for="Photo"></span>
                    </div>

                    <div class="form-group">
                        <label for="TeamId">Tým</label>
                        <select class="form-control" Name="TeamId" id="TeamId">
                            
                            @foreach (var team in Model.Teams)
                            {
                                @if (team.Id == @Model.TeamId)
                                {
                                    <option value="@team.Id" selected>
                                        @team.Name
                                    </option>
                                } else {
                                    <option value="@team.Id">
                                        @team.Name
                                    </option>
                                }
                            }
                        </select>
                        <span class="text-danger" asp-validation-for="TeamId"></span>
                    </div>

                    <div class="form-group">
                        <label for="PositionId">Post</label>
                        <select class="form-control" Name="PositionId" id="PositionId">
                            
                            @foreach (var pos in Model.Positions)
                            {
                                @if (pos.Id == @Model.PositionId)
                                {
                                    <option value="@pos.Id" selected>
                                        @pos.Name
                                    </option>
                                } else {
                                    <option value="@pos.Id">
                                        @pos.Name
                                    </option>
                                }
                            }
                        </select>
                        <span class="text-danger" asp-validation-for="PositionId"></span>
                    </div>

                    <div class="form-group">
                        <label for="AltPositionId">Alternativní Post</label>
                        <select class="form-control" Name="AltPositionId" id="AltPositionId">
                            
                            @foreach (var pos in Model.Positions)
                            {
                                @if (pos.Id == @Model.AltPositionId)
                                {
                                    <option value="@pos.Id" selected>
                                        @pos.Name
                                    </option>
                                } else {
                                    <option value="@pos.Id">
                                        @pos.Name
                                    </option>
                                }
                            }
                        </select>
                        <span class="text-danger" asp-validation-for="AltPositionId"></span>
                    </div>

                    <div class="form-group">
                        <label for="Height">Výška</label>
                        <input class="form-control" asp-for="Height" />
                        <span class="text-danger" asp-validation-for="Height"></span>
                    </div>

                    <div class="form-group">
                        <label for="Weight">Váha</label>
                        <input class="form-control" asp-for="Weight" />
                        <span class="text-danger" asp-validation-for="Weight"></span>
                    </div>

                    <div class="form-group">
                        <label for="School">Škola</label>
                        <input class="form-control" asp-for="School" />
                        <span class="text-danger" asp-validation-for="School"></span>
                    </div>
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Uložit</button>
                </div>
            </div>
        </div>
    </div>