@using FKTeplice.Models.PlayerViewModels
@model UpdateStorePlayerModel

@{
    ViewData["Title"] = "Přidat nového hráče";
}

<form enctype="multipart/form-data" asp-controller="Player" asp-action="Store" method="Post">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">@ViewData["Title"]</h3>
                </div>
                <div class="box-body dl-horizontal">
                    <div class="form-group">
                        <label for="FirstName">Jméno *</label>
                        <input class="form-control" required asp-for="FirstName" />
                        <span asp-validation-for="FirstName"></span>
                    </div>  

                    <div class="form-group">
                        <label for="LastName">Příjmení *</label>
                        <input class="form-control" required asp-for="LastName" />
                        <span asp-validation-for="LastName"></span>
                    </div>

                    <div class="form-group">
                        <label for="Birthday">Datum narození*</label>
                        <input class="form-control" required asp-for="Birthday" />
                        <span asp-validation-for="Birthday"></span>
                    </div>

                    <div class="form-group">
                        <label for="Photo">Fotografie</label>
                        <input  class="form-control" 
                                name="Photo"
                                id="Photo"
                                type="file"
                                accept="image/*"
                        />
                        <span asp-validation-for="Photo"></span>
                    </div>

                    <div class="form-group">
                        <label for="School">Škola</label>
                        <input class="form-control" asp-for="School" />
                        <span asp-validation-for="School"></span>
                    </div>

                    <div class="form-group">
                        <label for="TeamId">Tým</label>
                        <select class="select-two form-control" Name="TeamId" id="TeamId">
                            <option></option>
                            @foreach (var team in Model.Teams)
                            {
                                <option value="@team.Id">@team.Name</option>
                            }
                        </select>
                        <span asp-validation-for="TeamId"></span>
                    </div>
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Uložit</button>
                </div>
            </div>
        </div>
    </div>
</form>
